<resources>

    <style name="style_name" parent="Widget.AppCompat.EditText">
        <item name="android:layout_weight">1</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:inputType">textPersonName</item>
        <item name="android:textColorHint">@color/dark_gray</item>
        <item name="android:textSize">@dimen/sp_13</item>
        <item name="android:tint">@color/slide_black</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:backgroundTint">@color/slide_black</item>
        <item name="android:textCursorDrawable">@color/black</item>

    </style>


    <style name="style_checkbox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:layout_weight">1</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:buttonTint">@color/slide_black</item>

    </style>


    <style name="style_labels" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textSize">@dimen/sp_15</item>
        <item name="android:textColor">@color/black</item>


    </style>

    <style name="style_label_textview" parent="Widget.AppCompat.TextView">
        <item name="android:layout_marginLeft">@dimen/dp_10</item>
        <item name="android:drawablePadding">@dimen/dp_15</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/sp_15</item>

    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/light_gray</item>
        <item name="colorPrimaryDark">@color/dark_gray</item>
        <item name="colorAccent">@color/purple_700</item>
    </style>


</resources>